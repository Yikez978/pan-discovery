<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%-12thread] %highlight(%-5level) %cyan(%-18logger{0}) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.alcibiade.pandiscovery" level="OFF"/>

    <root level="OFF">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
